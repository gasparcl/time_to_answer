<div class="bg-white border border-secondary border-opacity-25 rounded-3 shadow" style="width: 40vw;">
  <div class="bg-primary w-100 rounded-top p-3">
    <h4 class="text-white mb-0"> <%= t("sessions_page.forgot_password") %> </h4>
  </div>

  <div class="px-2 py-5 mx-5 my-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-group pb-4">
        <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control bg-light shadow-sm" %>
      </div>

      <div class="d-flex gap-4 align-items-center justify-content-center">     
        <%= f.submit t("sessions_page.recover_password_text"), class: "btn btn-primary shadow-sm" %>
      </div>
      
    <% end %>
  </div>
  <%# render "users/shared/links" %>
</div>