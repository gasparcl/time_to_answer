<div class="bg-white border border-secondary border-opacity-25 rounded-3 shadow" style="width: 40vw;">
  <div class="bg-primary w-100 rounded-top p-3">
    <h4 class="text-white mb-0"> <%= t('sessions_page.change_password') %> </h4>
  </div>

  <div class="px-2 py-5 mx-5 my-3">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group pb-4">
        <%= f.password_field :password, placeholder: "New Password", class: "form-control bg-light shadow-sm" %>
      </div>

      <div class="form-group pb-4">
        <%= f.password_field :password_confirmation, placeholder: "New Password Confirmation", class: "form-control bg-light shadow-sm" %>
      </div>
      
      <div class="d-flex align-items-center justify-content-center">
        <%= f.submit t('sessions_page.btn_change_password'), class: "btn btn-primary shadow-sm" %>
      </div>
      
    <% end %>
  </div>
  <%# render "admins/shared/links" %> 
</div>