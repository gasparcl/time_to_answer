<div class="bg-white border border-secondary border-opacity-25 rounded-3 shadow" style="width: 40vw;">
  <div class="bg-primary w-100 rounded-top p-3">
    <h4 class="text-white mb-0"> Cadastro - <%= resource_class %> </h4>
  </div>

  <div class="px-2 py-5 mx-5 my-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), role: "form") do |f| %>
      <div class="form-group pb-4">
        <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control bg-light shadow-sm" %>
      </div>

      <div class="form-group pb-4">
        <%= f.password_field :password, placeholder: "Password", class: "form-control bg-light shadow-sm" %>
      </div>

      <div class="form-group pb-4">
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control bg-light shadow-sm" %>
      </div>
      
      <div class="d-flex">
        <%= f.submit "Cadastrar-se", class: "btn btn-lg btn-primary btn-block shadow-sm flex-grow-1" %>
      </div>
      
    <% end %>
  </div>
  <%# render "admins/shared/links" %> 
</div>
