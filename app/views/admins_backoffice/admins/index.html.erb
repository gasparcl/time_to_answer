<h1> <%= t('messages.list', model: @admins.model_name.human(count: @admins.count)) %> </h1>
<hr/>
<div class='table-responsive pt-2'>
   <table class='table table-striped table-bordered table-hover p-5'>
      <thead>
         <tr>
            <th>#</th>
            <th> <%= translate_attr(@admins, :email) %> </th>
            <th> <%= translate_attr(@admins, :created_at) %> </th>
            <th class="text-center">
               <%= link_to new_admins_backoffice_admin_path, class:"btn btn-sm btn-success btn-circle col-10", title:"Add admin" do %>
                     <i class='fa fa-plus'></i>
               <% end %>
            </th>
         </tr>
      </thead>

      <tbody>
         <% @admins.each do |admin| %>
            <tr>
               <td>
                  <%= admin.id %>
               </td>
               <td>
                  <%= admin.email %>
               </td>
               <td>
                  <%= admin.created_at.strftime('%d/%m/%Y') %>
               </td>
               <td class="text-center" style='width: 100px;'>
                  <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-sm btn-primary btn-circle", title:"Edit admin" do %>
                     <i class='fa fa-edit'></i>
                  <% end %>

                  <%= link_to admins_backoffice_admin_path(admin), method: :delete, data: { confirm: t('confirmations.delete') }, class:"btn btn-sm btn-outline-danger btn-circle", title:"Delete admin" do %>
                     <i class='fa fa-minus'></i>
                  <% end %>
               </td>
            </tr>
         <% end %>
         
      </tbody>
   </table>

   <div class="d-flex justify-content-center">
      <%= paginate @admins %>
   </div>
</div>
