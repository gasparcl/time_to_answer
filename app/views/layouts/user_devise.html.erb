<!DOCTYPE html>
<html>
  <head>
    <title>Time to Answer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= stylesheet_link_tag    'user_devise' %>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
  </head>

   <body>
      <div class='container-fluid pe-0 ps-0 vh-100'>
         <%= render partial: 'layouts/shared/home_navbar' %>
      
         <div class="d-flex justify-content-center align-items-center flex-column bg-light h-75">
            <%= yield %>
         </div>
      </div>

      <%= javascript_include_tag 'application' %>
      <%= javascript_include_tag 'user_devise' %>      

      <% if flash %>
         <% flash.each do |key, value| %>
            <%= javascript_tag do %>
               $.bootstrapGrowl("<%= value %>", {
                  type: 'danger',
                  align: 'right',
                  allow_dismiss: false,
                  stackup_spacing: 10
               });
            <% end %>
         <% end %>
      <% end %>

      <% unless resource.errors.empty? %>
         <% resource.errors.full_messages.each do |msg| %>
            <%= javascript_tag do %>
               $.bootstrapGrowl("<%= msg %>", {
                  type: 'danger',
                  align: 'right',
                  allow_dismiss: false,
                  stackup_spacing: 10
               });
            <% end %>
         <% end %>
      <% end %>
   </body>

</html>
